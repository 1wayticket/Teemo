<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <include layout="@layout/title_bar"/>
    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/add_tab"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        tl:tl_bar_color="#ffffff"
        tl:tl_indicator_color="@color/colorTheme"
        tl:tl_indicator_corner_radius="5dp"
        tl:tl_tab_width="80dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#66000000"/>
    <EditText
        android:id="@+id/add_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/icon_search"
        android:hint="搜联系人"
        android:textSize="14sp"
        android:maxLines="1"
        android:paddingLeft="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#66000000"/>
    <Button
        android:id="@+id/add_commit"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="搜索"
        android:textColor="@color/white"
        android:background="@drawable/shape_button_lines2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:text="搜索历史"
        android:textSize="12sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@android:color/darker_gray"/>
    <ListView
        android:id="@+id/add_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <Button
        android:id="@+id/add_del"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:text="清空搜索记录"
        android:layout_marginBottom="30dp"/>
</LinearLayout>